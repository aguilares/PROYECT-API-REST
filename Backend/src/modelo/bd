create table seguro(
    id int AUTO_INCREMENT,
    nombre varchar(50),
    creado datetime,
    modificado datetime,
    usuario int,
    PRIMARY key(id)
) 
create table hospital(
    id int AUTO_INCREMENT,
    red varchar(50),
    nombre varchar(50),
    telefono varchar(20),
    direccion varchar(60),
    creado datetime,
    modificado datetime,
    usuario int,
    PRIMARY key(id),
) 
